<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lecteurmusique">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LecteurMusique">


        <!--Déclaration d'un Service :-->
        <service android:name=".MusiqueService"/>


        <!--Déclaration d'un BroadcastReceiver :-->
        <receiver android:name=".MusiqueBroadcastReceiver"  android:exported="true"/>


        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask">    <!--Défini l'activité en une seule tache maximum : Evite de relancer l'activité quand on appuit sur la notification de controle musique-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>